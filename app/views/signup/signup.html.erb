<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign up</h1>
        <p class="text-xs-center">
          <a href="/login">Have an account?</a>
        </p>

        <% if @user.errors.any? %>
          <ul class="error-messages">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_for(@user, url: users_path, html: { class: "form-horizontal" }) do |f| %>
          <fieldset class="form-group">
            <%= f.label :username, class: "control-label" %>
            <%= f.text_field :username, class: "form-control form-control-lg", placeholder: "Username" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :email, class: "control-label" %>
            <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.label :password_confirmation, class: "control-label" %>
            <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm Password" %>
          </fieldset>
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary pull-xs-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>